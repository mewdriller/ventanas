<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Logic="clr-namespace:Base2io.Ventanas.Logic" x:Class="Base2io.Ventanas.Preferences"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Preferences" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Hotkeys" Margin="10" FontWeight="Bold"/>
        <DataGrid Margin="10" ItemsSource="{Binding RegisteredHotkeys}" Grid.Row="1"/>
    </Grid>
</Window>
